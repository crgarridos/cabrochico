---
interface Props {
    title: string;
}

const { title } = Astro.props;
const description = "Sitio oficial de CABROCHICO";
const image = "img/cc-four-pink.jpeg";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import { BASE } from "../constants";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="theme-color" content="#13151a" />
        <meta name="og:image" content={new URL(image, Astro.url)} />
        <meta name="og:title" content={title} />
        <meta name="og:description" content={description} />
        <meta name="og:url" content={Astro.url} />
        <meta name="og:site_name" content="CABROCHICO" />
        <meta name="og:type" content="website" />
        <link rel="icon" type="image/png" href=`${BASE}/favicon.png` />
        <meta name="generator" content="Cabrochickenbot" />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);

		--cc-color-orange: 231 92 2;
		--cc-color-yellow: 254 217 37;
		--cc-color-green: #8ec526;
		--cc-color-black: #13151a;
	}
	html {
		font-family: system-ui, sans-serif;
		min-height: 100vh;
		min-height: 100dvh;
		background: #0c0c0c;
	}
	body {
		min-height: 100dvh;
		background: linear-gradient(
				to bottom,
				var(--cc-color-black),
				var(--cc-color-green)
		);
		display: flex;
    flex-direction: column;
		padding: 1rem;
	}
	main {
		margin: auto;
		width: 800px;
		max-width: 100%;
		color: white;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>