    const d1 = parseInt(c1.date.replace(/-/g, ""));
    const d2 = parseInt(c2.date.replace(/-/g, ""));
    return d2 - d1; // Sorted by date DESC
});
---

<Layout title="Concerts">
    <h1 class="mt-24 mb-16 font-bold text-3xl">{"// PAST CONCERTS //"}</h1>
    {
        CONCERTS.map(({ date, place, city, bands, source }) => (
            <div class="mb-4">
                <Concert
                    yyyyMMdd={date}
                    place={place}
                    city={city}
                    bands={bands}
                />
            </div>
        ))
    }
</Layout>

