---
import { BASE } from "../constants";
import Layout from "../layouts/Layout.astro";
import RoundButton from "../components/RoundButton.astro";

import { Image } from 'astro:assets';
import revengaCover from '../assets/img/revenga cover.png';
---

<Layout title="Sitio oficial de CABROCHICO.">
    <!-- LAST ALBUM -->

    <article class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-0 sm:mt-4">
        <Image
            src={revengaCover}
            alt="Cover of REVENGA!"
            class="max-w-[80%] sm:max-w-full mx-auto sm:mx-0"
        />
        <div class="items-center w-full">
            <h2 class="text-2xl font-bold mb-4 text-center sm:text-start">
                REVENGA! // LAST ALBUM
            </h2>

            <div class="mt-4 text-center sm:text-start">
                <a
                    href="https://open.spotify.com/album/1nM3ZpxapPEZX7gQqXucxq?si=6nksRsbTRDCDPKM-COpVbA"
                >
                    <img
                        src=`${BASE}/img/spotify-logo.svg`
                        class="inline-block h-[30px] mt-[6px]"
                    />
                </a>
                <a href="https://music.apple.com/us/album/revenga/1713025897">
                    <img
                        src=`${BASE}/img/apple-music-logo.svg`
                        class="inline-block h-[23px] ml-[10px]"
                    />
                </a>
            </div>

            <RoundButton
                class="mt-6 mx-auto sm:mx-0"
                href="https://artists.landr.com/064837126494"
                title="LISTEN NOW"
            />
        </div>
    </article>

    <!-- VIDEO -->

    <h1 class="mt-24 mb-4 font-bold text-3xl text-center sm:text-start">{"// VIDEO //"}</h1>
    <iframe
        class="w-full h-auto aspect-video mb-4"
        src="https://www.youtube-nocookie.com/embed/OvW8sQG0tpk?si=iY-4JKLVwaUT7aRi"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen
        loading="eager"
    >
    </iframe>
    <RoundButton
        class="mx-auto"
        href="https://www.youtube.com/@cabrochicoband"
        title="WATCH MORE"
    />

    <!-- CONCERTS -->
    <!--
    <h1 class="mt-24 mb-4 font-bold text-3xl">{"// CONCERTS //"}</h1>
    <RoundButton href="" title="SEE PAST" />
    -->

    <!-- CONTACT -->

    <h1 class="mt-24 mb-4 font-bold text-3xl text-center sm:text-start">
        {"// CONTACT //"}
    </h1>
    <p class="text-center sm:text-start">
        want to reach out? wanna buy some merch ? want to share a love story ?
    </p>
    <RoundButton
        class="mt-8 mx-auto sm:mx-0"
        href="https://ig.me/m/cabrochicoband"
        title="CONTACT US"
    />
</Layout>
