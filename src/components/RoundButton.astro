---
interface Props {
	title: string;
	href: string;
	class?: string
	target?: string
}

const { href, title, class: className, target = "_blank"} = Astro.props;
---
<a
  href={href}
  role="button"
  target={target}
  class={`
        block
        uppercase
        text-nowrap whitespace-nowrap
        text-center
        max-w-fit
        transition duration-200 ease-in-out
        bg-black hover:bg-[#112c16] hover:scale-110
        text-white font-semibold text-xl
        px-4 py-2
        border rounded-full
        select-none
        ${className}
  `}
>
  <span>{title}</span>
</a>
