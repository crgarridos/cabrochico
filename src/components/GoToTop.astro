<!-- Back to top button -->
<button
    type="button"
    class="!fixed bottom-5 end-5 p-5 sm:p-3
    opacity-0 pointer-events-none
    rounded-full shadow-md
    text-xs font-medium uppercase leading-tight text-white
    transition duration-150 ease-in-out
    bg-gray-900
    hover:bg-gray-700 hover:shadow-lg
    focus:bg-gray-700 focus:shadow-lg focus:outline-none focus:ring-0
    active:bg-black active:shadow-lg"
    id="btn-back-to-top"
>
    <span class="[&>svg]:w-6 sm:w-4">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="3"
            stroke="currentColor"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18"></path>
        </svg>
    </span>
</button>

<script>
    // Get the button
    const mybutton = document.getElementById("btn-back-to-top");

    // When the user scrolls down a third of the window from the top of the document, show the button

    const scrollFunction = () => {
        const threshold = window.innerHeight / 3;
        if (
            document.body.scrollTop > threshold ||
            document.documentElement.scrollTop > threshold
        ) {
            mybutton.classList.remove("opacity-0");
            mybutton.classList.remove("pointer-events-none");
        } else {
            mybutton.classList.add("opacity-0");
            mybutton.classList.add("pointer-events-none");
        }
    };
    function backToTop (event) {
        window.scrollTo({ top: 0, behavior: "smooth" });
        event.target.blur();
        this.blur();
    };

    // When the user clicks on the button, scroll to the top of the document
    mybutton.addEventListener("click", backToTop);

    window.addEventListener("scroll", scrollFunction);
</script>
