---
import { BASE } from "../constants";
const HORN_CURSOR = "resources/horn.cur";
---

<img id="cursor" src=`${BASE}/img/cursor.png` class="p-6 block absolute right-0 top-0" />

<style is:global>
    .horn {
        cursor:
            url(/resources/horn.cur) 4 12,
            auto;
    }
    @media (hover: none) or (max-width: 768px)  {
        img#cursor {
            display: none;
        }
    }
</style>

<script>
    import { $ } from "@/lib/dom-selector";

    document.addEventListener("astro:page-load", () => {
        const $body = $("body");
        const $cursor = $("#cursor");
        $cursor.addEventListener("click", () => {
            $body.classList.toggle("horn");
        });
    });
</script>
